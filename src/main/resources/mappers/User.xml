<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.CoinFiesta.CoinFiesta.domain.user.UserRepository">
	<insert id="save" parameterType="com.CoinFiesta.CoinFiesta.domain.user.User">
		insert into
			user_mst
		values(
			0,
			#{user_id},
			#{user_password},
			#{user_name},
			#{user_email}
		
		)
	</insert>
	
	<select id="findUserByUsername" parameterType="String" resultType="com.CoinFiesta.CoinFiesta.domain.user.User">
		select 
			user_code,
			user_id,
			user_password,
			user_name,
			user_email
		from
			user_mst
		where
			user_id = #{user_id}
	
	</select>
	
	
</mapper>